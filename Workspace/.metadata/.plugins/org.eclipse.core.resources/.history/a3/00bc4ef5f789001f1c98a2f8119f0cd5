package bucles;

import java.util.Scanner;

public class DoWhileNumeroMientras0 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int num;
		int contador = 0;
		int suma = 0;
		do {
			System.out.println("Numero: ");
			num = sc.nextInt();
			suma = suma + num;
			System.out.println(contador++);
		} while (num != 0 && contador < 3);

		System.out.println("Has introducido: " + contador);
		System.out.println("El valor total de los numeros introducidos es: " + suma);
		System.out.println(" El promdeio es:" + (suma / contador));
		sc.close();
	}
}
