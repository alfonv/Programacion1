package ejerciciosvarios;

import java.util.Scanner;

public class EjercicioSencilloFor {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Indique un n√∫mero: ");
		String cadena = sc.nextLine();
		
		for(int posicion= cadena.length();posicion <=0;posicion--) {
			System.out.println(cadena.charAt(posicion));
			posicion++;
		}
		System.out.println("El factorial es: "+ cadena.length());
		sc.close();
	}

}
